{
  "name": "revnote-functions",
  "description": "Firebase Functions for RevNote - Email notifications for inspection reminders",
  "version": "1.0.0",
  "main": "lib/index.js",
  "engines": {
    "node": "18"
  },
  "scripts": {
    "build": "tsc",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "dependencies": {
    "@sendgrid/mail": "^8.1.6",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^4.6.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "firebase-functions-test": "^2.1.0",
    "typescript": "^5.3.3"
  },
  "private": true
}
